{
  "buildCommand": "npm run build",
  "devCommand": null,
  "installCommand": "npm install",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/view/:id",
      "destination": "/view.html?id=:id"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/embed/spiral.html",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.recursive.eco https://localhost:* http://localhost:* 'self'"
        }
      ]
    },
    {
      "source": "/pages/content/viewer.html",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.recursive.eco https://*.vercel.app https://localhost:* http://localhost:* 'self'"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        }
      ]
    },
    {
      "source": "/pages/stories/viewer.html",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.recursive.eco https://*.vercel.app https://localhost:* http://localhost:* 'self'"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}